<UserControl x:Class="UI.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400"
             DataContext="{Binding RelativeSource={RelativeSource Self}, Path=Vm}">

    <StackPanel x:Name="LayoutRoot" Background="White">
        <TextBlock>Test</TextBlock>
        
        <TextBlock Text="{Binding MyProperty}" />
        
        <Button Command="{Binding RandomizeCommand}">Random</Button>
        
        <Button Command="{Binding Randomize2Command}">Random 2</Button>
    </StackPanel>
</UserControl>
